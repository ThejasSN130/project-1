<% layout("/layouts/boilerplate") %>
<style>
  .container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
  }
  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 1.3rem;
    opacity: 0.7;
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
  .filter p {
    font-size: 0.8rem;
  }

  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    display: flex;
    align-items: center;
    margin-top: 1rem;
  }
</style>
<body>
  <div id="filters " class="container">
    <div class="filter">
      <div><i class="fa-solid fa-fire-flame-curved"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div><i class="fa-regular fa-building"></i></div>
      <p>Iconic Cities</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Moutains</p>
    </div>
    <div class="filter">
      <div><i class="fa-brands fa-fort-awesome-alt"></i></div>
      <p>Castels</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Moutains</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-tent"></i></div>
      <p>Camping</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-cow"></i></div>
      <p>Farms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-snowflake"></i></div>
      <p>Arctic</p>
    </div>
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="switchCheckDefault"
        />
        <label class="form-check-label" for="switchCheckDefault"
          >Display Taxes</label
        >
      </div>
    </div>
  </div>
  <div
    class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 row-cols-1 g-4 mt-1.8"
  >
    <% for (let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="listlink">
      <div class="listing-card col">
        <img
          src="<%= listing.image.url  %>"
          class="card-img-top"
          alt="image"
          style="height: 20rem"
        />
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b> <br />
            &#8377;<%= listing.price.toLocaleString("en-IN")%>/Night
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const taxToggle = document.getElementById("switchCheckDefault");
    const prices = document.querySelectorAll(".card-text");

    taxToggle.addEventListener("change", function () {
      prices.forEach((price) => {
        if (taxToggle.checked) {
          price.innerHTML = price.innerHTML.replace(
            /(\d+)(?=\/Night)/,
            (match) => `${match} + 18% Tax`
          );
        } else {
          price.innerHTML = price.innerHTML.replace(/ \+ 18% Tax/, "");
        }
      });
    });
  });
  z;
</script>
