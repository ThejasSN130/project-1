<% layout("/layouts/boilerplate") %>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <br />
      <h3>Create a New Listing</h3>
      <form
        method="POST"
        action="/listings"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="listing-title" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            placeholder="Enter title"
            id="listing-title"
            class="form-control"
            required
          />
          <div class="valid-feedback">Valid Title</div>
        </div>
        <div class="mb-3">
          <label for="listing-description" class="form-label"
            >Description</label
          >
          <textarea
            name="listing[description]"
            placeholder="Enter description"
            id="listing-description"
            class="form-control"
            required
          ></textarea>

        </div>
        <div class="mb-3">
          <label for="listing-image.url" class="form-label">Upload Listing Image</label>
          <input
            type="file"
            name="listing[image]"
            class="form-control"
            required
          />
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="listing-price" class="form-label">Price</label>
            <input
              type="number"
              name="listing[price]"
              placeholder="Enter price"
              class="form-control"
              id="listing-price"
              required
            />
             <div class="invalid-feedback">Enter Valid Price</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="listing-country" class="form-label">Country</label>
            <input
              type="text"
              name="listing[country]"
              placeholder="Enter country"
              class="form-control"
              id="listing-country"
              required
            />
              <div class="invalid-feedback">Enter Valid Country</div>
        </div>
        <div class="mb-3">
          <label for="listing-location" class="form-label">Location</label>
          <input
            type="text"
            name="listing[location]"
            placeholder="enter location"
            class="form-control"
            id="listing-location"
            required
          />
           <div class="invalid-feedback">Enter Valid Location</div>
        </div>
        <br />
        <button class="btn btn-dark add-btn">Add</button>
      </form>
    </div>
  </div>
  <br />
</body>
